        },
        {
            "glot-model": "about",
            "linkto": "https://github.com/K-Sakanoshita/community_mapmaker",
            "divider": true
        },
        {
            "glot-model": "owner",
            "linkto": "https://github.com/K-Sakanoshita/community_mapmaker",
            "divider": false
        },
        {
            "glot-model": "openstreetmap",
            "linkto": "https://www.openstreetmap.org/about",
            "divider": false
        }
    ],
